<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_360"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="@dimen/dp_30"
        android:id="@+id/tuijian_image"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@drawable/a5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yin装"
            android:id="@+id/tuijian_title"
            android:textColor="@color/c_black"
            android:textSize="@dimen/sp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:id="@+id/tuijian_jianjie"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_10"

            />

        <RelativeLayout
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:layout_marginTop="@dimen/dp_3"
                android:textColor="@color/c_red"
                android:textSize="@dimen/sp_20"
                android:id="@+id/tuijian_price"
                />
            <Button
                android:layout_width="@dimen/dp_65"
                android:background="@drawable/anniu_orange"
                android:text="四色可选"
                android:layout_alignParentRight="true"
                android:textColor="@color/c_F3740E"
                android:layout_height="@dimen/dp_40" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
