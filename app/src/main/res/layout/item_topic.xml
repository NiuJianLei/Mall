<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:padding="@dimen/dp_5"
    app:cardElevation="@dimen/dp_5"
    app:cardBackgroundColor="@color/c_999"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/topic_photo"
                android:src="@drawable/a5"
                />

            <Button
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/anniu_cfd994b"
                android:text="热门"
                android:textColor="@color/c_white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_toRightOf="@+id/topic_photo"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/c_black"
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/topic_name"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:layout_below="@+id/topic_photo"
                android:scaleType="centerCrop"
                android:src="@drawable/a5"
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/topic_image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topic_image"
                android:text="五个春天的天"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/c_black"
                android:layout_marginLeft="@dimen/dp_20"
                android:id="@+id/topic_title"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99￥"
                android:layout_below="@+id/topic_image"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/c_red"
                android:textSize="@dimen/sp_18"
                android:id="@+id/topic_price"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐厨起居好物"
                android:layout_below="@+id/topic_title"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/topic_like"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/c_999"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_3"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/u193"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_marginLeft="@dimen/dp_3"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/u194"
                android:layout_marginLeft="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:layout_marginLeft="@dimen/dp_3"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/u195"
                android:layout_marginLeft="@dimen/dp_130"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_marginLeft="@dimen/dp_3"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/c_999"
            />

    </LinearLayout>



</android.support.v7.widget.CardView>
