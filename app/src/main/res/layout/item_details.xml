<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/dp_8"
    app:cardBackgroundColor="@color/c_white"
    app:cardElevation="@dimen/dp_8"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50" />

        <ImageView
            android:id="@+id/details_image"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_130"
            android:layout_marginLeft="@dimen/dp_40"
            android:scaleType="centerCrop"
            android:src="@drawable/a5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/details_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/c_black"
                android:textSize="@dimen/sp_30" />

            <TextView
                android:id="@+id/details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="@color/c_red"
                android:textSize="@dimen/sp_30"

                />
        </LinearLayout>

        <com.duanc.app.shopcart.AddMinusView
            android:id="@+id/details_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_30"
            app:addtextbg="@color/c_red"
            app:buttonheight="@dimen/dp_30"
            app:buttonwidth="@dimen/dp_50"
            app:textbg="@color/c_999" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
