<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:scaleType="centerCrop"
        android:id="@+id/zhuanti_image"
        android:src="@drawable/a5"
        android:layout_marginTop="@dimen/dp_10"
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个多i"
            android:layout_below="@+id/zhuanti_image"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/c_black"
            android:textSize="@dimen/sp_19"
            android:id="@+id/zhuanti_title"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:layout_below="@+id/zhuanti_image"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/c_red"
            android:layout_alignParentRight="true"
            android:id="@+id/zhuanti_price"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="器具毫无"
        android:id="@+id/zhuanti_jianjie"
        android:layout_below="@+id/zhuanti_title"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_6"

        />


</RelativeLayout>
